{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}PAPYS45 - AJOUT ACTUALITE
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8 ">
				<h1 class="formTitle text-danger text-center fs-1 mt-5">{{ "ajout d'une actualité"|upper }}</h1>
				<ul class="text-center mt-5">
					{% for error in errors %}
						<li class="text-danger">
							{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<div class="container mt-2">
		<div class="row d-flex flex-column justify-content-center">
			<div class="col-lg-6 ">
				<form action="" method="POST" class="form" enctype="multipart/form-data">

						<div class="form-group m-3">
							<label class="form-label" for="title">Titre de l'actualité:</label>
							<input type="text" class="form-control formContent" name="title" id="title" placeholder="Titre de l'actualité" value="{{ actuality.title ?? '' }}" required>
						</div>

						<div class="form-group m-3">
							<label class="form-label " for="content">Texte:</label>
							<input type="textarea" class="form-control formContent" rows="4" name="content" id="content" placeholder="Texte de l'actualité" value="{{ actuality.content ?? '' }}" required>
						</div>

						<div class="d-flex align-items-center justify-content-between">
							<button type="button" class="btn btn-outline-success m-3" href="/admin/actuality/add">Ajouter</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<a href="/admin/actuality/index">
		<button type="button" class="btn btn-outline-primary ms-5 m-4" href="#">Retour au menu</button>
	</a>
{% endblock %}
