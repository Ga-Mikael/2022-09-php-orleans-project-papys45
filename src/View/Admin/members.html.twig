{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminMembers.css">
{% endblock %}


{% block content %}

<div class="container mt-5">
	<div class="row d-flex justify-content-center">
		<div class="col-10">
			<h1 class="adminMembersTitle text-danger text-center fs-1 mt-5">Administration des membres</h1>
			<div class="text-end">
				<a href="/items/add">
					<button type="button" class="btn btn-danger align-self-right">Ajouter un membre</button>
				</a>
			</div>
			<table class="table table-striped table-hover">
