{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}PAPYS45 - AJOUT ACTUALITE
{% endblock %}

{% block content %}

	<div class="container mt-2">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6 ">
				<form action="" method="POST" class="form" enctype="multipart/form-data">
					<div class="d-flex justify-content-center mt-2">

						<div class="form-group m-2">
							<label class="form-label" for="title">Titre:</label>
							<input type="text" class="form-control formContent" name="title" id="title" placeholder="Titre de l'actualité" value="{{ actuality.title }}" required>
						</div>
						<div class="form-group m-2">
							<label class="form-label " for="content">Texte:</label>
							<input type="textarea" class="form-control formContent" name="content" id="content" placeholder="Texte de l'actualité" value="{{ actuality.content }}" required>
						</div>

						<div class="d-flex align-items-center justify-content-between ">
							<a href="/admin/actuality/add">
								<button type="button" class="btn btn-outline-success mt-2">Ajouter</button>

							{% endblock %}
