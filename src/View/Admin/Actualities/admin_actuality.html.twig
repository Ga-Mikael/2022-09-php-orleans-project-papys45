 {% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}PAPYS45 - ADMIN ACTUALITES
{% endblock %}

{% block content %}

<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-10">
				<h1 class="actu-title text-center fs-1 mt-5 text-danger">{{ "administration - actualit√©s"|upper }}</h1>

					<div class="text-end">
						<a href="/admin/actualites/ajouter" class="btn btn-danger align-self-right">Ajouter</a>
					</div>

					{% for actuality in actualities %}
						<table class="table table-striped table-hover justify-content-between">
							<thead>
								<tr>
									<th scope="col" class="col-md-9">{{ actuality.title }}</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td class="col-md-9">{{ actuality.content }}</td>
									<td>
										<button type="button" class="btn btn-outline-warning btn-sm" href="admin/actualites/editer">Editer</button>
									</td>
									<td>
										<button type="button" class="btn btn-outline-danger btn-sm" href="#">Supprimer</button>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% block javascript %}{% endblock %}
{% endblock %}

