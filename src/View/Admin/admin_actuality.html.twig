{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}PAPYS45 - ADMIN ACTUALITES
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col mt-4 mb-4">
				<h1 class="actu text-center m-5 text-danger">ADMINISTRATION - ACTUALITES</h1>
				<div class="row d-flex justify-content-center align-items-center shadow-sm m-4">

					{% for actuality in actualities %}
						<div class="col d-flex flex-column m-2">
							<h2 class="card-title m-2">{{ actuality.title }}</h2>
							<p class="card-text ms-2">{{ actuality.content }}</p>
							<a href="/actuality/add">
								<button type="button" class="btn btn-outline-success m-2" href="#">Ajouter</button>
							</a>
							<a href="/actuality/edit?={{ actuality.id }}">
								<button type="button" class="edit btn btn-outline-warning mb-2" href="#">Editer</button>
							</a>
							<a href="/actuality/delete">
								<button type="button" class="btn btn-outline-danger m-2" href="#">Supprimer</button>
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% block javascript %}{% endblock %}
