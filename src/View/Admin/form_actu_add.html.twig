{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}PAPYS45 - AJOUT ACTUALITE
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8 ">
				<h1 class="formTitle text-danger text-center fs-1 mt-5">{{ "ajout d'une actualité"|upper }}</h1>
				<ul class="text-center mt-5">
					{% for error in errors %}
						<li class="text-danger">
							{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<div class="container mt-2">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6">

            {% if message == 'success' %}
					<div class="alert alert-success text-center" role="alert">Votre actualité a bien été ajoutée.</div>
				{% endif %}
				<form action="" method="POST">
					<div class="form-group m-3">
						<label class="form-label" for="title">Titre de l'actualité:</label>
						<input type="text" class="form-control" name="title" id="title" placeholder="Titre de l'actualité" value="{{ actuality.title ?? '' }}" required>
					</div>

					<div class="form-group m-3">
						<label class="formLabel" for="content">Description:
						</label>
						<textarea class="form-control formContent" name="content" id="content" rows="3" placeholder="Decrivez ce que contient votre actualité" required>{{ actuality.content ?? '' }}</textarea>
					</div>

					<div class="d-flex align-items-center justify-content-between">
						<button type="submit" class="btn btn-outline-danger m-3" href="/admin/actualites/ajouter">Ajouter</button>
					</div>
					<div class="d-flex align-items-center justify-content-between">
						<button type="button" class="btn btn-outline-dark m-3" href="/admin/actuality/index">Retour au menu</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
