{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminRoute.css">
{% endblock %}

{% block content %}
	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-10">
				<h1 class="AdminRouteTitle text-danger text-center fs-1 mt-5">Administration des sorties</h1>
				<div class="text-end">
					<a href="">
						<button class="btn btn-danger align-self-right">Ajouter une sortie</button>
					</a>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col" class="col-md-2">Date de sortie</th>
							<th scope="col" class="col-md-2">Heure de départ</th>
							<th scope="col" class="col-md-2">Lieu de départ</th>
							<th scope="col" class="col-md-2">Lieu d'arrivé</th>
							<th scope="col" class="col-md-2">Distance</th>
							<th scope="col" class="col-md-2"></th>
							<th scope="col" class="col-md-2"></th>
							<th scope="col" class="col-md-2"></th>
						</tr>
					</thead>
					<tbody>
						{% for routes in route %}
							<tr>
								<td class="col-md-2">{{routes.date|date("d/m/Y")}}</td>
								<td class="col-md-2">{{routes.time|date('H\\hi')}}</td>
								<td class="col-md-2">{{routes.start}}</td>
								<td class="col-md-2">{{routes.finish}}</td>
								<td class="col-md-2">{{routes.distance ~ " km"}}</td>
								<td>
									<a>
										<button class="btn btn-outline-warning btn-sm" type="button">Ajouter participant</button>
									</a>
								</td>
								<td>
									<a>
										<button class="btn btn-outline-warning btn-sm" type="button">Editer</button>
									</a>
								</td>
								<td>
									<a>
										<button class="btn btn-outline-danger btn-sm" type="button">Supprimer</button>
									</a>
								</td>
							</tr>

						{% endfor %}
					</tbody>

				</table>

			</div>
		</div>
	</div>

{% endblock %}
