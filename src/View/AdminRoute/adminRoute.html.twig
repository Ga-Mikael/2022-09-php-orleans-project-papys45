{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminRoute.css">
{% endblock %}

{% block content %}
	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-10">
				<h1 class="AdminRouteTitle text-danger text-center fs-1 mt-5">Administration des sorties</h1>
				<div class="text-end">
					<a href="">
						<button class="btn btn-danger align-self-right">Ajouter une sortie</button>
					</a>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col">Date de sortie</th>
							<th scope="col">Heure de départ</th>
							<th scope="col">Lieu de départ</th>
							<th scope="col">Lieu d'arrivé</th>
							<th scope="col">Ravito</th>
							<th scope="col">Distance</th>
							<th scope="col">Difficulté</th>
							<th scope="col"></th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{% for routes in route %}
							<tr>
								<td>{{routes.date}}</td>
								<td>{{routes.time}}</td>
								<td>{{routes.start}}</td>
								<td>{{routes.finish}}</td>
								<td>{{routes.ravito}}</td>
								<td>{{routes.distance}}</td>
								<td>{{routes.difficulty}}</td>
								<td>
									<a>
										<button class="btn btn-outline-warning btn-sm">Ajouter membre</button>
									</a>
								</td>
								<td>
									<a>
										<button class="btn btn-outline-warning btn-sm">Editer</button>
									</a>
								</td>
								<td>
									<a>
										<button class="btn btn-outline-danger btn-sm">Supprimer</button>
									</a>
								</td>
							</tr>

						{% endfor %}
					</tbody>

				</table>


			</div>
		</div>
	</div>

{% endblock %}
